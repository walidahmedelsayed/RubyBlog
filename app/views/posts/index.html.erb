
<h1>Posts</h1>

<div class="container">
  <%= link_to 'Add New Post', new_post_path %>
  <% @posts.each do |post| %>

    <h3>  <%= post.title %></h3>
    <p> <%= post.text %></p>
    <p><%= time_ago_in_words post.created_at%> ago</p>
    <p>  <%= link_to 'Show', post_path(post) %><% if post.user == current_user %> || <%= link_to 'Edit', edit_post_path(post) %>
    || <%= link_to 'Delete', post_path(post), method: :delete, data: {confirm:'Are you sure?'} %><% end %> </p>
      <br>
    <hr>
  <% end %>

</div>