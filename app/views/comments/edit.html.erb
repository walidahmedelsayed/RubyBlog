<h4>Edit Comment:</h4>
<%= form_for :comment, url: post_comment_path(@post,@comment), method: :patch do |f| %>

    <div class="field">
      <%= f.label :comment %><br />
      <%= f.text_area :comment %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

<%= link_to 'Back', post_path(@comment.post_id) %>